<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Meal</th>
      <th>Restaurant</th>
      <th>Status</th>
      <th>Invited</th>
      <th>Joined</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.meal %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.status %></td>
        <td><%= OrdersUser.where(order_id: order.id).count %></td>
        <td><%= OrdersUser.where(order_id: order.id).where(is_joined: 1).count %></td>
        <td><%= link_to 'Show',  order_path(order) %></td>
        <td><%= if order.status == "waiting"  
                  link_to 'Finish', order, method: :put  
                end 
            %></td>
        <td><%= if order.status == "waiting"  
                  link_to 'Cancel', order, method: :delete, data: { confirm: 'Are you sure?' } 
                  end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @orders %>

<br>

