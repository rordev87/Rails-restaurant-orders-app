<h1>New Order</h1>

<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <%= f.label :meal %> 
   <%= select_tag(:meal, options_for_select([['lunch', "lunch"], ['brackfast', "brackfast"]], 1)) %>
  </div>
  <div class="field">
    <%= f.label :restaurant %>
    <%= f.text_field :restaurant %>
  </div>
  <div class="field">
	  <%= f.label :friend %>
    <%= f.text_field :friend %>
	<input type="text" list="friends" />

	<datalist id="friends">
		<% @users.each do |user| %>
			<option value=<%=user.name%>>
		<%end%>
		<% @groups.each do |group| %>
			<option value=<%=group.name%>>
		<%end%>
		
	</datalist>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', orders_path %>
