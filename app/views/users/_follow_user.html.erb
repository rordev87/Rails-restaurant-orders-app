<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= link_to(unfollow_user_path(user), :remote => true, :class => 'btn btn-danger') do %>
   <i class="icon-remove icon-white"></i>
   Un-Friend
 <% end %><p></p>
  <% else %>
    <%= link_to(follow_user_path(user) ,:remote => true, :class => 'btn btn-success') do %>
    <i class="icon-ok icon-white"></i>
    Friend
    <%end%><p></p>
  <% end %>
<% end %>