<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>
<%= form_for User.new, url: new_member_group_path(@group.id) do |f| %>
  

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
  <%= f.submit  %>
  </div>
<% end %>


<fieldset class="col-sm-12" style="overflow-y: scroll; margin-top:10px;">
  <legend>Friends Member:</legend>
  <% @usergroup.each do |user| %>
    <% if user.group_id == @group.id %>
    <% @users.each do |username| %>
    <% if username.id == user.user_id %>
    <div class="col-sm-4">
      <img class="col-sm-5" src="">
      <div class="col-sm-6">
        <span class="col-sm-12">
          <%= username.name %></span>
          <% end %>
          <% end %>
          <% end %>
        </div>
    </div>
  <% end %>
</fieldset>

