 
 <%= form_for(@group) do |f| %>

  <div class="field">
    <%= f.label :name %> 
    <%= f.text_field :name %>
  <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>

<h1>Listing Groups</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
    <% if group.user_id == current_user.id %>
      <tr>
        <td><%= group.name %></td> 
        <td><%= link_to 'Show', group, :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', group, :class => 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
    <% end %>

  </tbody>
</table>

<%= link_to 'Back', groups_path %>
